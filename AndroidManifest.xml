<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.darshancomputing.BatteryIndicatorPro"
          android:versionCode="18"
          android:versionName="3.0.0-dev">

  <application android:label="@string/app_full_name"
               android:icon="@drawable/battery">

    <activity android:name=".BatteryIndicator"
              android:label="@string/app_name"
              android:theme="@android:style/Theme.Dialog"
              android:launchMode="singleInstance"
	      android:excludeFromRecents="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name=".SettingsActivity"
              android:label="@string/settings_activity_name"
              android:launchMode="singleInstance"
	      android:excludeFromRecents="true">
    </activity>

    <activity android:name=".InfoActivity"
              android:label="@string/info_activity_name"
              android:theme="@android:style/Theme.Light"
              android:launchMode="singleInstance"
	      android:excludeFromRecents="true">
    </activity>

    <activity android:name=".LogViewActivity"
              android:label="@string/log_view_activity_name"
              android:launchMode="singleInstance"
	      android:excludeFromRecents="true">
    </activity>

    <service android:name=".BatteryIndicatorService" />

    <receiver android:name=".BootCompletedReceiver"
              android:enabled="true"
              android:exported="false"
              android:label="BootCompletedReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>

  </application>

  <uses-sdk android:minSdkVersion="3"
            android:targetSdkVersion="4" />

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <!-- Only used for debugging (traces written to sdcard) (TODO: remove before building release) -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
