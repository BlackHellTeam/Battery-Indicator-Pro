<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle"
>
  <!-- Note that there's an Android bug where bottomLeft and bottomRight are switched! -->
  <!-- There's another bug where earlier versions of Android need a radius greater than 1
       for every corner in order for any corners to show up. -->
  <corners android:radius="2sp"
           android:topLeftRadius="5sp"
           android:bottomRightRadius="5sp"
           android:topRightRadius="0sp"
           android:bottomLeftRadius="0sp"
  />
  <size android:height="10sp"
        android:width="14sp"
  />
  <!--solid android:color="#CA2020" /-->
  <gradient android:startColor="#A00808"
            android:endColor="#DA3030"
            android:angle="90"
  />
</shape>
