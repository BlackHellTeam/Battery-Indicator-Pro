<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
>
  <LinearLayout android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
  >
    <TextView android:id="@+id/title_t"
	      android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="2dp"
              android:textColor="#fff"
	      android:textSize="16sp"
              android:text="@string/main_window_title"
    />

    <TextView android:id="@+id/status_since_t"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="5dp"
              android:textColor="#A4C639"
	      android:textSize="12sp"
    />

    <Button android:id="@+id/toggle_lock_screen_b"
            android:layout_height="43dp"
	    android:layout_width="fill_parent"
            android:layout_gravity="center_horizontal"
    />

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="2dp"
              android:textColor="#A4C639"
	      android:textSize="12sp"
              android:text="Light Usage Left:   27:42h"
    />

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="2dp"
              android:textColor="#E8D018"
	      android:textSize="12sp"
              android:text="Normal Usage Left:   12:17h"
    />

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="5dp"
              android:textColor="#DD6D1D"
	      android:textSize="12sp"
              android:text="Constant Usage Left:   3:31h"
    />

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="5dp"
              android:paddingBottom="3dp"
              android:textColor="#FFF"
              android:textSize="12sp"
              android:text="Press BACK to leave."
    />

    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="5dp"
              android:textColor="#FFF"
              android:textSize="12sp"
              android:text="Press MENU for more options."
    />

    <View android:layout_width="fill_parent"
          android:layout_height="2dp"
    />

  </LinearLayout>
</ScrollView>
