<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
>
  <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
  >
    <View android:layout_width="0px"
          android:layout_height="fill_parent"
          android:layout_weight="0.1"
    />
    <com.darshancomputing.BatteryIndicatorPro.BatteryLevelView android:id="@+id/battery_level_view"
                                                               android:layout_width="0px"
                                                               android:layout_weight="0.5"
                                                               android:layout_height="fill_parent"
                                                               android:scaleType="centerInside"
                                                               android:padding="10dp"
    />

    <LinearLayout android:orientation="vertical"
                  android:layout_width="0px"
                  android:layout_weight="0.5"
                  android:layout_height="fill_parent"
    >
      <TextView android:id="@+id/level"
	        android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.6"
                android:gravity="center_horizontal|bottom"
                android:textColor="#fff"
                android:textSize="@dimen/bia_level"
      />

      <TextView android:id="@+id/time_remaining"
	        android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.4"
                android:gravity="center_horizontal|bottom"
                android:textColor="#fff"
                android:textSize="@dimen/bia_time_remaining"
      />

      <TextView android:id="@+id/until_what"
	        android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|top"
                android:textColor="#33B5E5"
                android:textSize="@dimen/bia_until_what"
      />
    </LinearLayout>
    <View android:layout_width="0px"
          android:layout_height="fill_parent"
          android:layout_weight="0.1"
    />
  </LinearLayout>
  <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
  >
    <TextView android:id="@+id/status_with_duration"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:textColor="#ffffff"
              android:textSize="@dimen/bia_until_what"
    />
        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/pre_buttons_padding"
        />

        <Button android:id="@+id/battery_use_b"
                android:layout_height="@dimen/bu_button_height"
	        android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/bu_button_fs"
                android:text="@string/battery_use_b"
        />

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/between_buttons_padding"
        />

        <Button android:id="@+id/toggle_lock_screen_b"
                android:layout_height="@dimen/tls_button_height"
	        android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/tls_button_fs"
        />

        <View android:layout_width="fill_parent"
              android:layout_height="@dimen/post_buttons_padding"
              android:paddingTop="0dp"
              android:paddingBottom="0dp"
        />
  </LinearLayout>
</LinearLayout>
