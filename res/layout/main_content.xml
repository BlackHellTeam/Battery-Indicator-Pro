<?xml version="1.0" encoding="utf-8"?>
      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/main_content"
                    android:orientation="vertical"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
      >
        <TextView android:id="@+id/title_t"
	      android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:paddingBottom="2dp"
              android:textColor="#fff"
              android:text="@string/main_window_title"
        />

        <TextView android:id="@+id/status_since_t"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:paddingBottom="5dp"
                  android:textColor="#A4C639"
        />

        <Button android:id="@+id/battery_use_b"
                android:layout_height="43dp"
	        android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
                android:text="@string/battery_use_b"
        />

        <View android:layout_width="fill_parent"
              android:layout_height="2dp"
        />

        <Button android:id="@+id/toggle_lock_screen_b"
                android:layout_height="43dp"
	        android:layout_width="fill_parent"
                android:layout_gravity="center_horizontal"
        />

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:paddingBottom="2dp"
        >
          <TextView android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/light_usage"
	            android:textSize="12sp"
                    android:text="Light Usage Left:"
          />
          <TextView android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/light_usage"
	            android:textSize="12sp"
                    android:text="27:42h"
          />
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:paddingBottom="2dp"
        >
          <TextView android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/normal_usage"
	            android:textSize="12sp"
                    android:text="Normal Usage Left:"
          />
          <TextView android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/normal_usage"
	            android:textSize="12sp"
                    android:text="12:17h"
          />
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:paddingBottom="5dp"
        >
          <TextView android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/constant_usage"
	            android:textSize="12sp"
                    android:text="Constant Usage Left:"
          />
          <TextView android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/constant_usage"
	            android:textSize="12sp"
                    android:text="3:31h"
          />
        </LinearLayout>

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="4dp"
                  android:paddingBottom="3dp"
                  android:textColor="#FFF"
                  android:textSize="12sp"
                  android:text="Press BACK to leave."
        />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="4dp"
                  android:textColor="#FFF"
                  android:textSize="12sp"
                  android:text="Press MENU for more items."
        />

        <View android:layout_width="fill_parent"
              android:layout_height="2dp"
        />
      </LinearLayout>
